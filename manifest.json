{
	"manifest_version": 3,
	"name": "Jira task branch",
	"description": "Utility extension which generates valid Git branch name from Jira task.",
	"version": "1.0",
	"icons": {
		"48": "logo.png"
	},
	"action": {
		"default_icon": "logo-disabled.png",
		"default_popup": "./popup.html"
	},
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["scripting", "tabs"],
	"host_permissions": ["https://*.atlassian.net/*"]
}
